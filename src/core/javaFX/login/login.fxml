<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.javaFX.login.LoginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane fx:id="paneContent" prefHeight="750.0" prefWidth="1000.0" style="-fx-background-color: #3d4857;" GridPane.valignment="TOP">
         <children>
            <JFXTextField fx:id="txtUsername" alignment="BOTTOM_CENTER" focusColor="#747e8c" layoutX="350.0" layoutY="269.0" mouseTransparent="true" prefHeight="25.0" prefWidth="300.0" promptText="username" style="-fx-text-fill: #a6b5c9; -fx-prompt-text-fill: #a6b5c9;" unFocusColor="#242e3b">
               <font>
                  <Font name="Segoe UI Light" size="18.0" />
               </font>
            </JFXTextField>
            <JFXPasswordField fx:id="txtPassword" alignment="CENTER" focusColor="#747e8c" layoutX="350.0" layoutY="358.0" onAction="#login" prefHeight="29.0" prefWidth="300.0" promptText="password" style="-fx-text-fill: #a6b5c9; -fx-prompt-text-fill: #a6b5c9; -fx-background-color: #3d4857;" unFocusColor="#242e3b">
                <font>
                    <Font name="Segoe UI Light" size="18.0" />
                </font>
            </JFXPasswordField>
             <JFXButton fx:id="btnLogin" layoutX="350.0" layoutY="441.0" onAction="#login" prefHeight="45.0" prefWidth="300.0" style="-fx-background-color: f2aa78;" text="Login" textFill="#824923" />
            <JFXButton fx:id="btnRegister" layoutX="350.0" layoutY="492.0" onAction="#register" prefHeight="45.0" prefWidth="300.0" style="-fx-background-color: f2aa78;" text="Register" textFill="#824923" />
         </children>
      </Pane>
   </children>
</GridPane>
